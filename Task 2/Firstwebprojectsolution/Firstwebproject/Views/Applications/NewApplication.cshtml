@{
    ViewData["Title"] = "Submit New Application";
}
<html>
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <style>
        body {
            font-family: Verdana, Geneva, sans-serif;
            font-size: 14px;
            background: #f2f2f2;
        }

        .form_wrapper {
            background: #fff;
            width: 400px;
            max-width: 100%;
            box-sizing: border-box;
            padding: 25px;
            margin: 0% auto 0;
            position: relative;
            z-index: 1;
            border-top: 5px solid #0a8b6b;
            box-shadow: 0 0 3px rgba(0, 0, 0, 0.1);
            opacity: 1;
        }

            .form_wrapper h2 {
                font-size: 1.5em;
                line-height: 1.5em;
                margin: 0;
            }

            .form_wrapper .title_container {
                text-align: center;
                padding-bottom: 15px;
            }

            .form_wrapper h3 {
                font-size: 1.1em;
                font-weight: normal;
                line-height: 1.5em;
                margin: 0;
            }

            .form_wrapper label {
                font-size: 12px;
            }

            .form_wrapper .row {
                margin: 10px -15px;
            }

                .form_wrapper .row > div {
                    padding: 0 15px;
                    box-sizing: border-box;
                }

            .form_wrapper .col_half {
                width: 50%;
                float: left;
            }

            .form_wrapper .input_field {
                position: relative;
                margin-bottom: 20px;
            }

                .form_wrapper .input_field > span {
                    position: absolute;
                    left: 0;
                    top: 0;
                    color: #333;
                    height: 100%;
                    border-right: 1px solid #0a8b6b;
                    text-align: center;
                    width: 30px;
                }

                    .form_wrapper .input_field > span i {
                        padding-top: 10px;
                    }

            .form_wrapper .textarea_field > span i {
                padding-top: 10px;
            }

            .form_wrapper input[type="text"],
            .form_wrapper input[type="email"],
            .form_wrapper input[type="password"] {
                width: 100%;
                padding: 8px 10px 9px 35px;
                height: 35px;
                border: 1px solid #cccccc;
                box-sizing: border-box;
                outline: none;
            }

                .form_wrapper input[type="text"]:hover,
                .form_wrapper input[type="email"]:hover,
                .form_wrapper input[type="password"]:hover {
                    background: #fafafa;
                }

                .form_wrapper input[type="text"]:focus,
                .form_wrapper input[type="email"]:focus,
                .form_wrapper input[type="password"]:focus {
                    border: 1px solid #0a8b6b;
                    background: #fafafa;
                }

            .form_wrapper input[type="submit"] {
                background: #0a8b6b;
                height: 35px;
                line-height: 35px;
                width: 100%;
                border: none;
                outline: none;
                cursor: pointer;
                color: #fff;
                font-size: 1.1em;
                margin-bottom: 10px;
            }

            .form_wrapper input[type="checkbox"],
            .form_wrapper input[type="radio"] {
                border: 0;
                clip: rect(0 0 0 0);
                height: 1px;
                margin: -1px;
                overflow: hidden;
                padding: 0;
                position: absolute;
                width: 1px;
            }

            .form_wrapper .checkbox_option label {
                margin-right: 1em;
                position: relative;
            }

                .form_wrapper .checkbox_option label:before {
                    content: "";
                    display: inline-block;
                    width: 0.8em;
                    height: 0.8em;
                    margin-right: 0.5em;
                    vertical-align: middle;
                    border: 2px solid #cccccc;
                    padding: 0.12em;
                    background-color: transparent;
                    background-clip: content-box;
                    transition: all 0.2s ease;
                }

            .form_wrapper input[type="checkbox"]:hover + label:before {
                border-color: #0a8b6b;
            }

            .form_wrapper input[type="checkbox"]:checked + label:before {
                border-color: #0a8b6b;
                background-color: #0a8b6b;
                content: "\2713";
                text-align: center;
                color: white;
            }

            .form_wrapper .radio_option label {
                margin-right: 1em;
            }

                .form_wrapper .radio_option label:before {
                    content: "";
                    display: inline-block;
                    width: 0.8em;
                    height: 0.8em;
                    margin-right: 0.5em;
                    border-radius: 100%;
                    vertical-align: middle;
                    border: 2px solid #cccccc;
                    padding: 0.12em;
                    background-color: transparent;
                    background-clip: content-box;
                }

            .form_wrapper input[type="radio"]:hover + label:before {
                border-color: #0a8b6b;
            }

            .form_wrapper input[type="radio"]:checked + label:before {
                background-color: #0a8b6b;
                border-color: #0a8b6b;
                content: "";
            }

            .form_wrapper .checkbox_option label:before {
                width: 2em;
                height: 2em;
                border-color: #0a8b6b;
            }

            .form_wrapper .radio_option label:before {
                width: 2em;
                height: 2em;
            }
    </style>
</head>
<body>
    <div class="form_wrapper">
        <div class="form_container">
            <div class="title_container">
                <h2>Submit Application</h2>
            </div>
            <div class="row clearfix">
                <div class="">
                    <form asp-action="NewApplication" method="post">
                        <div class="input_field">
                            <span><i aria-hidden="true" class="fa fa-envelope"></i></span>
                            <input type="email" name="email" id="emailInput" placeholder="Email" required />
                            <p id="emailErrorMessage" style="color: red;"></p>
                        </div>
                        <div class="input_field">
                            <span><i aria-hidden="true" class="fa fa-user"></i></span>
                            <input type="text" name="Name" placeholder="Name" required />
                        </div>
                        <div class="input_field">
                            <span><i class="fa fa-map-marker" aria-hidden="true"></i></span>
                            <input type="text" name="address" placeholder="Address" required />
                        </div>
                        <div class="input_field">
                            <span><i class="fa fa-mobile" aria-hidden="true"></i></span>
                            <input type="text" name="LebanonPhoneNumber" placeholder="Phone Number" required
                                   pattern="\d{8}" title="Please enter an 8-digit number" />
                        </div>
                        <div class="input_field">
                            AGE:
                            <input type="number" name="age" placeholder="0" required />
                        </div>
                        <div class="input_field radio_option" id="pattern3">
                            <input type="radio" name="radiogroup1" id="rd1" value="Male">
                            <label for="rd1">👨🏻</label>
                            <input type="radio" name="radiogroup1" id="rd2" value="Female">
                            <label for="rd2">👩🏻</label>
                        </div>
                        <div class="input_field select_option">
                            <select name="programName">
                                <option>Select a program</option>
                                <option>Cardiology Program</option>
                                <option>Electrical Engineering Bachelor</option>
                                <option>Marketing Management Master</option>
                                <option>Criminal Law LLB</option>
                                <option>Fine Arts BFA</option>
                            </select>
                            <div class="select_arrow"></div>
                        </div>
                        <div class="input_field checkbox_option">
                            <input type="checkbox" id="cb1" name="lebaneseBaccalaureate">
                            <label for="cb1">Lebanese Baccalaureate Certificate or its equivalent</label>
                        </div>
                        <div class="input_field checkbox_option">
                            <input type="checkbox" id="cb2" name="universityCertificate">
                            <label for="cb2">University Certificate or its equivalent</label>
                        </div>
                        <div><a herf="">Did you submit an application before?</a></div><br>
                        <input class="button" type="submit" value="SUBMIT" />
                    </form>
                </div>
            </div>
        </div>
    </div>
    <script>
        document.getElementById("emailInput").addEventListener("input", function () {
            var emailInput = this.value;
            var emailErrorMessage = document.getElementById("emailErrorMessage");

            if (emailInput.endsWith("gmail.com")) {
                emailErrorMessage.textContent = "";
            } else {
                emailErrorMessage.textContent = "Email must end with 'gmail.com'";
            }
        });
    </script>
</body>
</html>
